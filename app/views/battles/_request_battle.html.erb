<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>申請相手</th>
            <th>申請をやめる</th>
        </tr>
    </thead>
    <tbody>
        <% rank = 1 %>
        <% battles.each do |battle| %>
          <%# バトルがある時のみ通す %>
          <% if battle.present? && battle.battler.present? %>
            <tr>
                <td>
                    <%# <%= battle.updated_at.strftime("%Y-%m-%d %H:%M") %> %>
                </td>
                <td>
                <%= attachment_image_tag battle.battler,:profile_image, format: 'jpeg', class: "profile-icon", fallback: "no_image.png", size:'40x40' %>
                </td>
                <td>
                    <%= link_to climber_path(battle.battler.id) do %>
                        <%= battle.battler.name %>
                    <% end %>
                </td>
                <td>
                    <%= link_to  "申請をやめる", battle_path(battle.id), method: :delete%>
                </td>
            </tr>
          <% else %>
            <tr>
                <td>
                    <%# <%= battle.updated_at.strftime("%Y-%m-%d %H:%M") %> %>
                </td>
            </tr>
          <% end %>
        <% end %>
    </tbody>
</table>