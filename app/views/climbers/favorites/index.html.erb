<h2>お知らせ</h2>
<table class="table">
  <thead>
    <tr>
      <th>ジム</th>
      <th>お知らせ</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% if @favorites.present? %>
    <% @favorites.each do |f|%>
      <tr>
        <td><%= f.gym.gym_name %></td>
      <% f.gym.infos.each do |info| %>
        <td><%= info.info %></td>
      <% end %>
        <td><%= f.updated_at.strftime("%Y/%m/%d") %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <h3 class="text-center">メッセージはまだありません</h3>
    </tr>
  <% end %>
  </tbody>
</table>