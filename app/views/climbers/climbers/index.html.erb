<h1>
    クライマー一覧ページ
</h1>
<section class="tasks">
    <h2>
        友達検索
    </h2>
    <h3>
        ここからバトルを申し込んだりフォローすることができます
    </h3>
</section>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                名前
            </th>
            <th>
                今月登った本数
            </th>
            <th>
                バトル
            </th>
            <th>
                フォロー
            </th>
        </tr>
    </thead>
    <tbody>
        <% @climbers.each do |climber| %>
        <tr>
            <td>
                <%= attachment_image_tag climber,:profile_image, format: 'jpeg', class: "profile-icon", fallback: asset_path("no_image.png"), size:'40x40' %>
            </td>
            <td>
                <%= link_to climber_path(climber.id) do %>
                  <%= climber.name%>
                <% end %>
            </td>
            <td>
                <%= climber.month_done_tasks.count %>　本
            </td>
            <td>
                <%= render 'battle_now', climber: climber %>
            </td>
            <td>
                <%= render 'follow_unfollow', climber: climber %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>