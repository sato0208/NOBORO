<div class="container">
  <div class="row">
    <h3 class="col-xs-offset-2 col-xs-3">登録情報編集</h3>
  </div>
  <div class="container">
<%= form_with method: :patch, model: @climber, url:climber_path(@climber.id), local: true do |f| %>

    <div class="field row">
      <%= f.label :name, "プロフィール画像" %>
      <%= f.attachment_field :profile_image, placeholder:"プロフィール画像", id:"profile_icon" %>
    </div>

    <div class="field row">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
    </div>



    <div class="field row">
      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_field :introduction %>
    </div>


    <div class="field row">
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>
    </div>


    <div class="action row">
      <tr>
        <td><%= f.submit '編集内容を保存する', class: "btn btn-primary" %></td>
      </tr>
    </div>

    <% end %>

  </div>
</div>