<!-- main-visual用のdv -->
<div class="top-visual">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="content">
    <%= render "devise/shared/error_messages", resource: resource %>
    <%#= render 'layouts/alert' %>
      <h1>新規登録</h1>
      <p>次のフォームに必要事項をご記入ください</p>
      <div class="control">
        <label for="mymail">メールアドレス
          <span class="required">必須</span></label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="control">
        <label for="mymail">ニックネーム
          <span class="required">必須</span></label>
        <%= f.text_field :name, autofocus: true, id:"inputName"%>
      </div>

      <div class="control">
        <label for="mymail">パスワード
          <span class="required">必須</span>
        </label>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上 )</em>
        <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
        <div class="control">
          <label for="mymail">パスワード
            <span class="required">必須</span>
          </label>
            <em>( 確認用 )</em><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      <%= f.button "新規登録", :type => "submit", class: 'btn btn-lg btn-primary  center-block' %>
      <%= link_to 'かんたんログイン', homes_guest_sign_in_path, method: :post, class:"btn btn-lg btn-success center-block" %>

    <br>Already have an account? <%= render "climbers/shared/links" %>
  </div>
<% end %>
