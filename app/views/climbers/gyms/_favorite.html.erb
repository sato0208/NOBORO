<!-- イイねボタンここから -->
<% unless current_climber.nil? %>
  <% if gym.favorite_by?(current_climber) %>
    <!-- favorited_by?自分が含まれている場合 -->
      <%= link_to gym_favorites_path(gym.id),method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <% end %>
      お気に入り登録 
      <%= link_to favorite_gym_favo_path(gym.id) do %>
        <%= gym.favorites.count %>
      <% end %>
      人<br>
    <!-- favorited_by?自分が含まれていない場合 -->
    <% else %>
      <%= link_to gym_favorites_path(gym.id),method: :post,remote: true do %>
        <i class="fa fa-heart" aria-hidden="true"></i>
      <% end %>
        お気に入り登録
      <%= link_to favorite_gym_favo_path(gym.id) do %>
        <%= gym.favorites.count %>
      <% end %>
      人<br>
  <% end %>
  <%else%>
    <i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
    お気に入り登録 <%= gym.favorites.count %>人<br>
    <p>お気に入り登録する場合は<%= link_to " > 新規登録 / ログイン ", new_climber_registration_path %>してください</p>
<% end %>
