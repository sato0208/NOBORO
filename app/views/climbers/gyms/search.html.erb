
    <!-- 検索フォームここから -->
    <div class="search-form">
        <h4>　</h4>
        <h2></h2>
        <%= form_with method: :get,local: true, url:gyms_search_path do |f| %>
            <%= f.text_field :gym_name,{placeholder: "店名で検索"} %>
            <%= f.button :type => "submit", style: 'border-style: none;',class: 'btn btn-success' do %>
                <i class="fa fa-search"> ジムを探す</i>
            <% end %>
        <% end %>
    </div>
    <!-- ジャンル検索用 -->

    <%= render 'genres', genres: @genres %>
    <div class="table">
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>ジムの名前</th>
                    <th>ジムの紹介文</th>
                    <th>ジムのHP</th>
                    <th>ジムのジャンル</th>
                </tr>
            </thead>
            <tbody>
                <% @gyms.each do |gym| %>
                <tr>
                    <td>
                        <%= link_to gym.gym_name, gym_path(gym.id) %>
                    </td>
                    <td>
                        <%= gym.description %>
                    </td>
                    <td>
                        <%= gym.gym_url %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>