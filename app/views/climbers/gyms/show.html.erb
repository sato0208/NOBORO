
 <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal-1">
   トロフィーを獲得しましたDEMO
 </button>
 <div class="modal fade" id="modal-1" tabindex="-1">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
         <h4 class="modal-title">トロフィーを獲得しました</h4>
       </div>
       <div class="modal-body">
         <%= attachment_image_tag @new_trophy, :my_trophy_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: asset_path("bo2.jpeg"), size:'50x50' %>
         <br>
         <p>笑顔でボルダリングする女<%= image_tag 'new1.png' %></p>
       </div>
     </div>
   </div>
 </div>


<div class="description">
<%= attachment_image_tag @gym, :gym_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: asset_path("bo2.jpeg"), size:'400x300' %>
<div class="prof-vi">
        <h2 class="feature-title">
            <%= @gym.gym_name %>
            <%= @gym.address %>
        </h2>
        <h3 class="feature-title">
          <%= @gym.description %>
        </h3><br>
        <h3 class="feature-title">
          ホームページ
        </h3>

<td id="favorites_<%= @gym.id %>">
    <%= render 'favorite', gym: @gym %>
</td>
    <%= link_to ' 今月のランキング',rank_path, class: "btn btn-primary fas fa-chess-queen" %>
</div>
</div>
<section class="tasks">
    <div class="task">
    <h2>課題一覧</h2>
    <h3>課題名をクリックすると登れた人一覧が見れます
    </h3>
        <div class="table-responsive">
        <table class="table">
            <tbody>
                <!-- グレードのeach文 -->
                <% @grades_all.each do |grade| %>
                    <tr>
                        <td>
                            <%= grade.grade %>
                        </td>
                        <%# グレードに紐づくeach文 %>
                        <% gym_tasks = grade.tasks.where(gym_id: @gym.id)%>
                        <% gym_tasks.each do |f| %>
                            <% @new_done_task = DoneTask.new %>
                            <% @delete_done_task = current_climber.done_tasks.find_by(task_id: f.id)%>
                                <td id="done_task_<%= f.id %>">
                                    <%= render 'done_task', task: f, new_done_task: @new_done_task, delete_done_task: @delete_done_task %>
                                    <%= link_to task_path(f.id) do %>
                                        <%= f.task_name %>
                                    <% end %>
                                </td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    </div>
</section>



<%= link_to "＜＜戻る", gyms_path %>

