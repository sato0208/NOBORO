                </tr>
            </thead>
            <tbody>
                <% rank = 1 %>
                <% @all_done_tasks.each do |rank_done_task| %>
                <tr>
                    <td>
                        <%= rank %>位
                        <% rank += 1 %>
                    </td>
                    <td>
                    <%= attachment_image_tag rank_done_task.climber,:profile_image, format: 'jpeg', class: "profile-icon", fallback: "no_image.png", size:'40x40' %>
