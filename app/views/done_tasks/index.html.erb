  <h2><%= Date.today.month %>月 全ジム 登れた！ 数総合ランキング</h2>
<%= @all_my_rank %>位
<%= attachment_image_tag current_climber,:profile_image, format: 'jpeg', class: "profile-icon", fallback: "no_image.png", size:'40x40' %>
<%= current_climber.name %>

<table class="table">
    <thead>
        <tr>
            <th>順位</th>
            <th>写真</th>
            <th>名前</th>
            <th>登れた本数</th>
        </tr>
    </thead>
    <tbody>
        <% rank = 1 %>
        <% @all_done_tasks.each do |rank_done_task| %>
        <tr>
            <td>
                <%= rank %>位
                <% rank += 1 %>
            </td>
            <td>
            <%= attachment_image_tag rank_done_task.climber,:profile_image, format: 'jpeg', class: "profile-icon", fallback: "no_image.png", size:'40x40' %>
            </td>
            <td>
                <%= link_to climber_path(rank_done_task.climber_id) do %>
                    <%= rank_done_task.climber.name %>
                <% end %>
            </td>
            <td>
                <%= rank_done_task.count_per_gym %>本
            </td>
        </tr>
        <% end %>
    </tbody>
</table>